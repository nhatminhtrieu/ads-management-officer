{{#section "js"}}
	<script type="module" src="/static/js/vwLocations/loadMap.js"></script>

	<script>
		$(".disabled").on('keydown paste focus mousedown', function(e){
			if(e.keyCode != 9) // ignore tab
				e.preventDefault();
		});
	</script>
{{/section}}

{{#section "css"}}
<style>
	.disabled {
		pointer-events: none;
		background-color: #e9ecef;
	}
</style>
{{/section}}

<a class="btn p-0 link-primary" href="/advertisement/ad-location" role="button">
    <i class="bi bi-caret-left"></i>
    Trở về
</a>

<div class="alert alert-danger mt-3" role="alert" id="alert" hidden>
	Vui lòng chọn điểm đặt quảng cáo khác với điểm đặt quảng cáo đã có!
</div>

<h4 class="mt-3">Tạo mới điểm đặt quảng cáo</h4>
<div id="map" style="height:300px; width:100%"></div>

<form method="POST">
<!-- Địa chỉ điểm đặt quảng cáo input -->
<div class="form-outline mt-3">
	<label class="form-label" for="address">Điểm đặt quảng cáo <div style="display:inline; color:red">*</div></label>
	<input
		type="text"
		id="address"
		class="form-control border-2 disabled"
		placeholder="Vui lòng chọn 1 điểm trên bản đồ"
		name="address"
		required
	/>
</div>

<!-- Hidden input for latlng -->
<input type="hidden" id="latlng" name="coordinate" />

<!-- Loại vị trí input -->
<div class="form-outline mt-3">
	<label class="form-label" for="type">Loại vị trí <div style="display:inline; color:red">*</div></label>
	<input
		type="text"
		id="type"
		class="form-control border-2 bg-white"
		placeholder="Vui lòng nhập tên loại vị trí"
		name="type"
        required
	/>
</div>

<div class="form-outline mt-3">
    <label class="form-label" for="description">Loại hình quảng cáo <div style="display:inline; color:red">*</div></label>
    <select class="form-select" name="format" required>
        {{#each list}}
            <option value={{_id}}>{{name}}</option>
        {{/each}}
    </select>
</div>

<div class="text-end">
    <button type="submit" class="btn btn-primary mt-3">
		<i class="bi bi-plus-lg"></i>
		Tạo mới
	</button>
</div>
</form>

