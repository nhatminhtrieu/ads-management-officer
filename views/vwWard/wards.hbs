<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ward name</th>
            <th scope="col">District name</th>
            <th scope="col">&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        {{#each ward}}
        <tr>
            <th scope="row">{{inc @index}}</th>
            <td>{{this.ward}}</td>
            <td>{{this.district.district}}</td>
            <td>
                <a href="/wards/create" method="post" class="btn btn-warning">Add</a>
                <a href="/wards/update?id={{this.id}}&districtID={{this.district.id}}" class="btn btn-primary">
                    Edit
                </a>
                <a href="#" class="btn btn-danger"
                    onclick="event.preventDefault(); if(confirm('Are you sure you want to delete this ward?')) document.getElementById('delete-form-{{this.id}}').submit();">Delete</a>
                <form id="delete-form-{{this.id}}" action="/wards/delete?id={{this.id}}&districtID={{this.district.id}}"
                    method="post" style="display: none;"></form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>