<section class="py-3 py-md-5 py-xl-8">
  <div class="container">
    {{#if authUser.account_link}}
      <div class="d-flex flex-column align-items-center">
        <h2 class="display-5 fw-bold text-center">Liên kết tài khoản</h2>
        <p class="text-center m-0 text-success">Bạn đã liên kết với tài khoản facebook</p>
      </div>
    {{else}}
      <div class="col-12">
          <div class="mb-5">
            <h2 class="display-5 fw-bold text-center">Liên kết tài khoản</h2>
            <p class="text-center m-0">Thực hiện liên kết để việc đăng nhập thuận tiện hơn!!!</p>
             {{#if err_message}}
              <p class="text-center m-0 text-danger">{{err_message}}</p>
            {{/if}}
          </div>
        </div>
      <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">
          <div class="row gy-5 justify-content-center">
            <div class="col-12 col-lg-5 d-flex align-items-center">
              <div class="d-flex gap-3 flex-column w-100 ">
                <a href="/account/facebook" class="btn btn-lg btn-primary">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-facebook" viewBox="0 0 16 16">
                    <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z" />
                  </svg>
                  <span class="ms-2 fs-6">Liên kết với tài khoản Facebook</span>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    {{/if}}
  </div>
</section>

{{#section 'js'}}
<script type="text/javascript">
   if (window.location.hash == "#_=_") window.location.href = window.location.href.split('#')[0];
</script>
{{/section}}