{{! Sidebar active status }}
<script>
  document.querySelectorAll('a.list-group-item').forEach((a, index) => {
	index ? 
		(window.location.pathname == '/admin/area' || window.location.pathname == '/districts' ? 
			a.classList.add('active') : (a.classList.contains('active') && a.classList.remove('active'))) : 
		((window.location.pathname.includes('/admin/officer') || window.location.pathname == '/admin/createAccount') ?
      		a.classList.add('active') : (a.classList.contains('active') && a.classList.remove('active')))
  })
</script>

