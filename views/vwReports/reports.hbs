{{#section 'jsReports'}}


{{/section}}
<h4>Danh sách báo cáo</h4>

<table class="table table-hover mt-3 flex">
    <thead>
        <tr class="table-light">
            <th scope="col" style="width: 2rem">No.</th>
            <th scope="col">Tên người gửi</th>
            <th scope="col">Số điện thoại</th>
            <th scope="col" style="width: 40%">Địa điểm báo cáo</th>
            <th scope="col" style="width: 20%">Loại báo cáo</th>
            <th scope="col">&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        {{#each reports}}
        <tr>
            <th scope="row">{{this.index}}</th>
            <td>{{name}}</td>
            <td>{{phone}}</td>
            <td>{{address}}</td>
            <td>{{typeReport.name}}</td>
            <td class="text-end"><a href="/report/manage/{{_id}}" class="bi bi-arrows-angle-expand"></a></td>
        </tr>
        {{/each}}
    </tbody>
</table>